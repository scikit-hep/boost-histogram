  },
  {
   "cell_type": "code",
   "execution_count": 3,
   "metadata": {},
   "outputs": [
    {
     "data": {
      "text/plain": [
       "histogram(\n",
       "  regular_sqrt(10, 0, 10, metadata=\"x\", options=underflow | overflow),\n",
       "  regular(10, 0, 1, metadata=\"y\", options=overflow | circular)\n",
       ")"
      ]
     },
     "execution_count": 3,
     "metadata": {},
     "output_type": "execute_result"
    }
   ],
   "source": [
    "hist = bh.make_histogram(bh.axis.regular_sqrt(10,0,10, label='x'),\n",
    "                         bh.axis.circular(10,0,1, label='y'))\n",
    "hist"
   ]
  },
  {
